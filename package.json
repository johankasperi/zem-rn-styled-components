{
  "name": "zem-rn-styled-components",
  "version": "0.1.0",
  "description": "Zeplin extension that generates glamorous type styled components for React Native.",
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec"
  },
  "author": {
    "name": "Johan Kasperi",
    "email": "johan@kasperi.se",
    "url": "http://kspri.se"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johankasperi/zem-rn-styled-components.git"
  },
  "zeplin": {
    "displayName": "React Native Styled Components",
    "options": [
      {
        "name": "Color format",
        "type": "picker",
        "id": "colorFormat",
        "submenu": true,
        "options": [
          {
            "name": "Default",
            "value": "default"
          },
          {
            "name": "HEX",
            "value": "hex"
          },
          {
            "name": "RGB",
            "value": "rgb"
          },
          {
            "name": "HSL",
            "value": "hsl"
          }
        ],
        "default": "default"
      },
      {
        "name": "Add fontscale property to texts",
        "type": "switch",
        "id": "fontScale",
        "default": false
      },
      {
        "name": "Add color property to texts",
        "type": "switch",
        "id": "colorOverride",
        "default": false
      },
      {
        "name": "Text base component",
        "type": "text",
        "id": "textBaseComponent",
        "default": ""
      },
      {
        "name": "Theme namespace for colors in styled components",
        "type": "text",
        "id": "colorThemePrefix",
        "default": ""
      },
      {
        "name": "Theme namespace for fonts in styled components",
        "type": "text",
        "id": "fontThemePrefix",
        "default": ""
      },
      {
        "name": "Path to typography components",
        "type": "text",
        "id": "typographyComponentsPath",
        "default": "StyledComponents/Typography"
      },
      {
        "name": "Path to blur component",
        "type": "text",
        "id": "blurComponentPath",
        "default": ""
      }
    ],
    "projectTypes": [
      "ios",
      "android"
    ]
  },
  "dependencies": {
    "zem": "^0.2.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.5",
    "babel-jest": "22.4.4",
    "babel-plugin-module-resolver": "3.1.1",
    "eslint": "5.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "3.1.0",
    "prettier-eslint-cli": "^4.7.1"
  }
}
